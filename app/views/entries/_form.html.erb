<%= form_for(entry) do |f| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div>
    <%= f.label :image %><br />
    <%= f.file_field :image%>
  </div>
  <div class="field">
    <%= f.label :pincode %><br>
    <%= f.text_field :pincode %>
  </div>
  <div class="field">
    <%= f.label :other_details %><br>
    <%= f.text_field :other_details %>
  </div>
  <div class="field">
    <%= f.label :paid_home_delivery, "Paid Home Delivery" %>
    <%= f.radio_button :paid_home_delivery, false %> No
    <%= f.radio_button :paid_home_delivery,true %>Yes<br /> 
  </div>
  
  <div class="field check" style="display: none">
  <%= f.label :terms_and_conditions%></br>
  <%= f.text_area :terms_and_conditions%>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :category_name) %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id,:value=>current_user.id  %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", data: {disable_with: 'Please wait...'}%>
  </div>
<% end %>
<script>
$('#entry_paid_home_delivery_true').click(function (e) {
  $(".check").show();
});
$('#entry_paid_home_delivery_false').click(function (e) {
  $(".check").hide();
});
</script>