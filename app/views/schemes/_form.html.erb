<%= simple_form_for(@scheme) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :entry_id %>
    <%= f.input :category_id %>
     <%= f.cktext_area :content, class: 'someclass'%>
    <%= f.input :from_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
