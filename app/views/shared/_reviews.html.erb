<div class="container">
  <div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog">    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Reviews for <span class="category"></span></h4>
        </div>
        <div class="modal-body s_review">
          Show Reviews
          <% if @reviews.present?%>
       <%= render "reviews/show_reviews", :locals => {reviews:@reviews}%>
        <%end%>
        </div>
        <div class="modal-footer" >
          </div>
      </div>
    </div>
  </div>
</div>
